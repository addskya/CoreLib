<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/gap_size_40"
    android:orientation="horizontal"
    tools:background="@android:color/white">

    <!-- Icon -->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/gap_size_20"
        android:layout_height="@dimen/gap_size_20"
        android:layout_marginStart="@dimen/gap_size_20"
        android:contentDescription="@null"
        tools:src="@drawable/ic_loading" />

    <!-- Text -->
    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gap_size_20"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16"
        tools:text="@string/text_search" />

    <!-- content -->
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_16"
        tools:text="@string/text_sure" />

    <!-- Arrow -->
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gap_size_20"
        android:layout_marginEnd="@dimen/gap_size_20"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow"
        tools:src="@drawable/ic_arrow" />
</LinearLayout>