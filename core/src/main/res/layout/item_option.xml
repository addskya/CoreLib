<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="optionItem"
            type="cn.orange.core.option.OptionItem" />

        <variable
            name="view"
            type="cn.orange.core.option.OptionContract.View" />

    </data>

    <cn.orange.core.option.OptionTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_option_item"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="@dimen/gap_size_45"
        android:onClick="@{() -> view.onOptionItemClick(optionItem)}"
        android:textSize="@dimen/text_size_16"
        app:optionItem="@{optionItem}"
        tools:text="Item" />
</layout>