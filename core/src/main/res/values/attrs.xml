<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OptionItemView">
        <attr name="icon" />
        <attr name="text" />
        <attr name="textColor" />
        <attr name="value" />
        <attr name="valueColor" />
        <attr name="hint" />
        <attr name="arrow" format="boolean|reference" />
    </declare-styleable>

    <attr name="asterisk" format="boolean" />
    <attr name="text" format="string|reference" />
    <attr name="textColor" format="color|reference" />
    <attr name="value" format="string|reference" />
    <attr name="valueColor" format="color|reference" />
    <attr name="hint" format="string|reference" />
    <attr name="icon" format="reference" />


    <declare-styleable name="ActionItemView">
        <attr name="icon" />
    </declare-styleable>

    <declare-styleable name="ViewItem">
        <attr name="asterisk" />
        <attr name="text"  />
        <attr name="textColor"  />
    </declare-styleable>

    <declare-styleable name="TextViewItem">
        <attr name="value"  />
        <attr name="valueColor"  />
        <attr name="hint" />
        <attr name="valueBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="EditTextItem" >
        <!-- Whether or not support scan -->
        <attr name="scannable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SpinnerItem" >
        <attr name="adapter" format="string" />
    </declare-styleable>

    <declare-styleable name="PersistentView">
        <attr name="persistentKey" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="SimpleImageView">
        <attr name="src" format="reference" />
    </declare-styleable>

    <attr name="listDivider" format="reference" />

    <declare-styleable name="RecyclerView">
        <attr name="listDivider" />
    </declare-styleable>

    <declare-styleable name="RecyclerList">
        <attr name="listDivider" />
    </declare-styleable>
</resources>